		<import.package>javax.accessibility,javax.swing,javax.swing.border, org.osgi.framework,org.protege.editor.core.ui.workspace,*</import.package>
	</properties>

	<build>

		<finalName>jcel</finalName>

		<plugins>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>jcel</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Category>protege</Bundle-Category>
						<Bundle-Description>jcel standalone</Bundle-Description>
						<Bundle-Vendor>Chair of Automata Theory - TU Dresden</Bundle-Vendor>
						<Bundle-DocURL>http://lat.inf.tu-dresden.de</Bundle-DocURL>
						<Bundle-ClassPath>${bundle.classpath}</Bundle-ClassPath>
						<Import-Package>${import.package}</Import-Package>
						<Main-Class>${mainClass}</Main-Class>
						<Include-Resource>
							{maven-resources}, {maven-dependencies},
							@jcel-coreontology-${project.version}.jar,
							@jcel-core-${project.version}.jar,
							@jcel-ontology-${project.version}.jar,
							@jcel-reasoner-${project.version}.jar,
							@jcel-owlapi-${project.version}.jar,
							@jcel-protege-${project.version}.jar,
							@owlapi-distribution-3.5.1.jar,
							@slf4j-api-1.7.7.jar,
							@guava-18.0.jar,
							@guice-4.0-beta.jar,
							@guice-multibindings-4.0-beta.jar,
							@guice-assistedinject-4.0-beta.jar,
							@javax.inject-1.jar,
							@aopalliance-1.0.jar,
							@commons-io-2.4.jar,
							@sesame-model-2.7.12.jar,
							@sesame-rio-api-2.7.12.jar,
							@sesame-rio-binary-2.7.12.jar,
							@sesame-rio-datatypes-2.7.12.jar,
							@sesame-rio-languages-2.7.12.jar,
							@sesame-rio-n3-2.7.12.jar,
							@sesame-rio-nquads-2.7.12.jar,
							@sesame-rio-ntriples-2.7.12.jar,
							@sesame-rio-rdfjson-2.7.12.jar,
							@sesame-rio-rdfxml-2.7.12.jar,
							@sesame-rio-trig-2.7.12.jar,
							@sesame-rio-trix-2.7.12.jar,
							@sesame-rio-turtle-2.7.12.jar,
							@sesame-util-2.7.12.jar,
							@trove4j-3.0.3.jar,
							LICENSE.txt=../LICENSE.txt,
							copying.txt=../copying.txt,
							copying-lesser.txt=../copying-lesser.txt
						</Include-Resource>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>

	<name>jcel build standalone</name>

</project>

