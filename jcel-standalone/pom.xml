	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<mainClass>de.tudresden.inf.lat.jcel.owlapi.console.ConsoleStarter</mainClass>

		<bundle.jars>lib/net/sourceforge/owlapi/owlapi-distribution/3.5.1/owlapi-distribution-3.5.1.jar,lib/com/google/guava/guava/18.0/guava-18.0.jar,lib/com/google/inject/guice/4.0-beta/guice-4.0-beta.jar,lib/com/google/inject/extensions/guice-multibindings/4.0-beta/guice-multibindings-4.0-beta.jar,lib/com/google/inject/extensions/guice-assistedinject/4.0-beta/guice-assistedinject-4.0-beta.jar,lib/javax/inject/javax.inject/1/javax.inject-1.jar,lib/org/slf4j/slf4j-api/1.7.7/slf4j-api-1.7.7.jar,lib/aopalliance/aopalliance/1.0/aopalliance-1.0.jar,lib/commons-io/commons-io/2.4/commons-io-2.4.jar,lib/org/openrdf/sesame/sesame-model/2.7.12/sesame-model-2.7.12.jar,lib/org/openrdf/sesame/sesame-util/2.7.12/sesame-util-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-api/2.7.12/sesame-rio-api-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-binary/2.7.12/sesame-rio-binary-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-datatypes/2.7.12/sesame-rio-datatypes-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-languages/2.7.12/sesame-rio-languages-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-n3/2.7.12/sesame-rio-n3-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-nquads/2.7.12/sesame-rio-nquads-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-ntriples/2.7.12/sesame-rio-ntriples-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-rdfjson/2.7.12/sesame-rio-rdfjson-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-rdfxml/2.7.12/sesame-rio-rdfxml-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-trig/2.7.12/sesame-rio-trig-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-trix/2.7.12/sesame-rio-trix-2.7.12.jar,lib/org/openrdf/sesame/sesame-rio-turtle/2.7.12/sesame-rio-turtle-2.7.12.jar,lib/net/sf/trove4j/trove4j/3.0.3/trove4j-3.0.3.jar</bundle.jars>
