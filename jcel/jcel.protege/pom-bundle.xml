	<modelVersion>4.0.0</modelVersion>

	<groupId>jcel</groupId>
	<artifactId>bundle</artifactId>
	<version>0.15.0</version>
	<packaging>bundle</packaging>

	<name>jcel Protege plug-in</name>

	<parent>
		<groupId>jcel</groupId>
		<artifactId>parent</artifactId>
		<version>0.15.0</version>
		<relativePath>../jars</relativePath>
	</parent>

	<build>

		<finalName>de.tudresden.inf.lat.jcel</finalName>

		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<archive>
						<manifestFile>src/main/manifest/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Include-Resource>
							{maven-resources}, {maven-dependencies},
							@target/protege-0.15.0.jar,
							lib/jcel/ontology/0.15.0/ontology-0.15.0.jar=../ontology/target/ontology-0.15.0.jar,
							lib/jcel/ontology/0.15.0/copying.txt=../ontology/copying.txt,
							lib/jcel/ontology/0.15.0/copying-lesser.txt=../ontology/copying-lesser.txt,
							lib/jcel/core/0.15.0/core-0.15.0.jar=../core/target/core-0.15.0.jar,
							lib/jcel/core/0.15.0/copying.txt=../core/copying.txt,
							lib/jcel/core/0.15.0/copying-lesser.txt=../core/copying-lesser.txt,
							lib/jcel/owlapi/0.15.0/owlapi-0.15.0.jar=../owlapi/target/owlapi-0.15.0.jar,
							lib/jcel/owlapi/0.15.0/copying.txt=../owlapi/copying.txt,
							lib/jcel/owlapi/0.15.0/copying-lesser.txt=../owlapi/copying-lesser.txt
						</Include-Resource>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

