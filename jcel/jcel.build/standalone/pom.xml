	<modelVersion>4.0.0</modelVersion>

	<groupId>jcel</groupId>
	<artifactId>standalone</artifactId>
	<version>0.18.0</version>
	<packaging>bundle</packaging>

	<name>jcel standalone</name>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>


	<build>

		<finalName>jcel</finalName>

		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.0-alpha-2</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>version.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>de.tudresden.inf.lat.jcel;singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>jcel</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Activator>org.protege.editor.core.plugin.DefaultPluginActivator</Bundle-Activator>
						<Bundle-Category>protege</Bundle-Category>
						<Bundle-Description>jcel standalone</Bundle-Description>
						<Bundle-Vendor>Chair of Automata Theory - TU Dresden</Bundle-Vendor>
						<Bundle-DocURL>http://lat.inf.tu-dresden.de</Bundle-DocURL>
						<Bundle-ClassPath>${bundle.classpath}</Bundle-ClassPath>
						<Import-Package>javax.accessibility, javax.swing, javax.swing.border, org.osgi.framework, org.protege.editor.core.ui.workspace, *</Import-Package>
						<Main-Class>${mainclass}</Main-Class>
						<Include-Resource>
							{maven-resources}, {maven-dependencies},
							@../../jcel.coreontology/target/jcel.coreontology-${project.version}.jar,
							@../../jcel.core/target/jcel.core-${project.version}.jar,
							@../../jcel.ontology/target/jcel.ontology-${project.version}.jar,
							@../../jcel.reasoner/target/jcel.reasoner-${project.version}.jar,
							@../../jcel.owlapi/target/jcel.owlapi-${project.version}.jar,
							@../../jcel.protege/target/jcel.protege-${project.version}.jar,
							@../jars/lib/owlapi/owlapi/3.4.1/owlapi-3.4.1.jar
						</Include-Resource>
					</instructions>
				</configuration>
			</plugin>

		</plugins>
	</build>

</project>

